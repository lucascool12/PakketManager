<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GenericHandler</servlet-name>
        <servlet-class>Servlets.GenericHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenericHandler</servlet-name>
        <url-pattern>/GenericHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>koerierconstraint</display-name>
        <web-resource-collection>
            <web-resource-name>koerier</web-resource-name>
            <description/>
            <url-pattern>/koerier/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>koeriers</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>bediendeconstraint</display-name>
        <web-resource-collection>
            <web-resource-name>bediende</web-resource-name>
            <description/>
            <url-pattern>/bediende/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>bediendes</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>DBRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/badlogin.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>koeriers</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>bediendes</role-name>
    </security-role>
</web-app>
